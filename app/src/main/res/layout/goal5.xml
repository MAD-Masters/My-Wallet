<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFutureGoal"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/background_blue_left_bold_no_fills">


            <TextView
                android:id="@+id/goal"
                android:layout_width="174dp"
                android:layout_height="31dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="@string/goal18"
                android:textColor="#039be5"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageView23"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/background_blue_fill"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/goal19"
                android:textColor="#ffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="37dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mission" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/goal20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/goal" />

            <ImageView
                android:id="@+id/btngoal"
                android:layout_width="29dp"
                android:layout_height="37dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btndelete"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/edit" />

            <ImageView
                android:id="@+id/btndelete"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/delete_btn" />

            <TextView
                android:id="@+id/currentamount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/background_green"
                android:drawableLeft="@drawable/ic_baseline_check_circle_24_white"
                android:text="@string/goal19"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/totalAmount"
                app:layout_constraintTop_toBottomOf="@+id/goal" />

            <ImageView
                android:id="@+id/btnCamount"
                android:layout_width="39dp"
                android:layout_height="30dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btndelete"
                app:layout_constraintVertical_bias="0.05"
                app:srcCompat="@drawable/add_icon_main" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>