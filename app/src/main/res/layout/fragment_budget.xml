<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDailyExpense"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/income1layout"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:background="@drawable/background_blue_left_bold_no_fills">


            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="26dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/delete_btn"
                app:layout_constraintEnd_toStartOf="@+id/penMark"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/penMark"
                android:layout_width="24dp"
                android:layout_height="33dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/edit_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/budget5"
                android:textColor="#0189FF"
                app:layout_constraintStart_toEndOf="@+id/foodIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/number1"
                android:layout_width="92dp"
                android:layout_height="27dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_blue_fill"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/goal19"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/foodIcon" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_green"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/goal19"
                android:textColor="@color/colorWhite"
                app:layout_constraintStart_toEndOf="@+id/number1"
                app:layout_constraintTop_toBottomOf="@+id/categoryName" />

            <ImageView
                android:id="@+id/foodIcon"
                android:layout_width="36dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/food"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>