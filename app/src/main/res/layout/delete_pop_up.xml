<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="20dp"
    android:elevation="5dp"
    android:id="@+id/deletePopUp"
    android:background="@drawable/background_white_no_fills">

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:layout_weight="1.5"
            android:src="@drawable/trash"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="5">
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Are you sure to delete this record ?"
        android:textSize="16sp"
        android:textColor="@color/primaryColor"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bnDeleteConfirm"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="Delete"
            android:outlineProvider="none"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/background_pink_fully_rounded"
            android:elevation="10dp"
            android:textColor="#ffff" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cansel_delete"
            android:layout_width="wrap_content"
            android:elevation="10dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:textColor="@color/colorWhite"
            android:outlineProvider="none"
            android:background="@drawable/background_yellow_fully_rounded"
            android:text="Cansel" />
    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>